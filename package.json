{
  "name": "github_repos",
  "version": "1.0.0",
  "author": "NSS",
  "license": "ISC",
  "main": "src/server.ts",
  "scripts": {
    "start:dev": "nodemon --legacy-watch",
    "build": "chmod +x ./build-and-push-docker-image.sh && ./build-and-push-docker-image.sh",
    "deploy": "npx sls deploy",
    "destroy": "npx sls remove",
    "deploy:dev": "npm install && npm run build && npm run deploy",
    "destroy:dev": "npm run destroy",
    "test": "jest --no-cache"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@types/aws-lambda": "^8.10.71",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "aws-sdk-mock": "^5.1.0",
    "jest": "^26.6.3",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-fargate-plugin": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-plugin-warmup": "^5.1.0",
    "ts-jest": "^26.5.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.835.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "nodemon": "^2.0.7",
    "path": "^0.12.7",
    "swagger-ui-express": "^4.1.6"
  }
}
